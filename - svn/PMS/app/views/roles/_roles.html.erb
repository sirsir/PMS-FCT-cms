<%
operation_area ||= ''
%>

<table class='table_content' id='table_content_<%= @screen.id %>' cellspacing='0'>
  <tr class='tr_header'>
    <% ["&nbsp;", "Name", "Description", "&nbsp;"].each do |h| %>
      <th class='th_col_header'><%= (h =~ /&nbsp;/) ? h : h.to_s.titleize %></th>
    <% end %>
  </tr>
  <%= render :partial => "empty_loading_row", :locals => { :operation_area => operation_area } %>
  <%= render :partial => "role_record", :collection => @roles ,
              :locals => {
                :operation_area => operation_area
              } %>
</table>
